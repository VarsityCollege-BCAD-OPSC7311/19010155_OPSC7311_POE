<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--                                   code attribution                                   -->
    <!-- Author:    Azhar                                                           -->
    <!-- Link:      https://www.tutorialspoint.com/how-to-create-shadow-in-android-buttons    -->
    <item
        android:left="10dp"
        android:top="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>
            <solid android:color="#000" />
            <padding
                android:bottom="3dp"
                android:left="10dp"
                android:right="5dp"
                android:top="5dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>
            <solid android:color="@color/toolBarSettings" />
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp"/>
        </shape>
    </item>
    <!--                                          end                                         -->

</layer-list>